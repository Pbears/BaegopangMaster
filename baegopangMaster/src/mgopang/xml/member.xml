<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gopang.xml.member"> 
	<select id="idCheck" parameterType="java.lang.String" resultType="java.lang.String" >
		SELECT ID FROM MEMBER WHERE ID=#{id}
	</select>
	<select id="pwCheck" parameterType="java.lang.String" resultType="java.lang.String">
		SELECT PW FROM MEMBER WHERE ID=#{id}
	</select>
	<select id="searchAddress" parameterType="java.lang.String" resultType="zipcode">
		SELECT ZIPCODE, SIDO, GUGUN, DONG, BUNJI, SEQ 
		FROM ZIPCODE
		WHERE DONG LIKE '%'||#{dong}||'%'
	</select>
</mapper>